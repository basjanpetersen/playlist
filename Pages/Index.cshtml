<!DOCTYPE html>

@using System.Data;
@using playlistApp.App_Code;

@{

    songmethodsJSON smjson = new songmethodsJSON();
    string filePathJSON = @"~\playlist.json";
    List<Song> songs = smjson.GetAllSongs(filePathJSON);
    Session["playlistClassJSON"] = smjson;
    Session["filejson"] = filePathJSON;


}
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Playlist</title>
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>

    <h1> Hallo welkom op onze playlist. </h1>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">Playlist</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                <a class="nav-item nav-link" href="~/index.cshtml">XML</a>
                <a class="nav-item nav-link" href="~/Pages/Index.cshtml">JSON</a>
            </div>
        </div>
    </nav>

    <h2 style="padding: 5px;">JSON</h2>
    <table class="table table-dark">

        <tr>
            <th>Artist</th>
            <th>Title</th>
            <th>Album</th>
            <th>Year</th>
        </tr>

        @{
            foreach (Song song in songs)
            {
                <tr>
                    <td>@song.artist</td>
                    <td>@song.title</td>
                    <td>@song.album</td>
                    <td>@song.year</td>
                    <td>
                        <a id="edit" class="btn btn-danger" href="~/Pages/EditSong.cshtml?id=@song.id">Edit</a>
                        <a id="delete" class="btn btn-danger" href="~/Pages/DeleteSong.cshtml?id=@song.id">Delete</a>
                    </td>
                </tr>
            }
        }
    </table>

    <br />
    <a style="margin-left: 10px" class="btn btn-outline-success" href="Pages/CreateSong.cshtml">Add</a>
    </div>
</body>
</html>



