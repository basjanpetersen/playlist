@using playlistApp.App_Code;

@{
    SongMethods sm = Session["playlistClass"] as SongMethods;
    string file = Session["file"] as string;

    if (IsPost)
    {
        if (Request.Form["keuze"] == "ja")
        {
            string id = Request.QueryString["id"];
            sm.DeleteSong(id, file);
        }

        Response.Redirect(@"~/index.cshtml");
    }
}

<html>
<head>
    <meta charset="utf-8" />
    <title></title>
    <style>
    </style>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>
    <form action="" method="post" >
        <div class="form-check" class="form-group">
            <input class="form-check-input" type="radio" name="keuze" id="flexRadioDefault1" value="ja">
            <label class="form-check-label" for="flexRadioDefault1">
                ja
            </label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="keuze" id="flexRadioDefault2" value="nee" checked>
            <label class="form-check-label" for="flexRadioDefault2">
                nee
            </label>
        </div>


        <label for="button"></label>

        <input type="submit" class="btn" name="button" value="verstuur" />
    </form>


</body>
</html>