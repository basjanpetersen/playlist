<!DOCTYPE html>

@using System.Data;
@using playlistApp.App_Code;

@{

    SongMethods sm = new SongMethods();
    string filePath = Server.MapPath(@"~\playlist.xml");
    DataSet ds = SongMethods.GetAllSongs(filePath);



}
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Playlist</title>
    <link rel="stylesheet"  href="~/Content/bootstrap.css" />
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>
    <div>
        <h1> Hallo welkom op onze playlist. </h1>

        <table class="table-bordered>

            @{

                foreach (DataRow liedje in ds.Tables["song"].Rows)
                {
                    <tr>
                        <td>@liedje["artist"]</td>
                        <td>@liedje["title"]</td>
                        <td>@liedje["year"]</td>
                        <td>@liedje["album"]</td>
                    </tr>
                }

                //hier moet ik de ingelezen lijst van liedjes gaan weergeven//

            }


        </table>

        <br/> <br/>

        <a href="Pages\CreateSong.cshtml">Add</a>

    </div>
</body>
</html>
