<!DOCTYPE html>

@using System.Data;
@using playlistApp.App_Code;

@{
    SongMethods sm = new SongMethods();
    string filePath = @"~\playlist.xml";
    DataSet ds = sm.GetAllSongs(filePath);
    Session["playlistClass"] = sm;
    Session["file"] = filePath;

    songmethodsJSON smjson = new songmethodsJSON();
    string filePathJSON = @"~\playlist.json";
    List<Song> dsjson = smjson.GetAllSongs(filePathJSON);
    Session["playlistClassJSON"] = smjson;
    Session["file"] = filePathJSON;


}
